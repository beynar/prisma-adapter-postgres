{
  "name": "prisma-adapter-postgres",
  "version": "0.0.1",
  "description": "Prisma's driver adapter for Porsager 'postgres' library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prisma/prisma.git",
    "directory": "packages/adapter-postgres-js"
  },
  "scripts": {
    "dev": "DEV=true tsx helpers/build.ts",
    "build": "tsx helpers/build.ts",
    "test:ui": "vitest --ui",
    "test": "vitest",
    "lint": "eslint **/*.ts",
    "benchmark": "tsx postgres-adapter/benchmark/index.ts",
    "docs:generate": "typedoc --out postgres-adapter/docs/api src/index.ts",
    "check:types": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "validate": "npm run lint && npm run check:types && npm run test",
    "prepublishOnly": "npm run validate && npm run build",
    "postinstall": "node -e \"console.log('\\u001b[32m' + 'ðŸš€ Thanks for using prisma-adapter-postgres! If you find any issues, please report them at https://github.com/prisma/prisma/issues' + '\\u001b[0m')\"",
    "db": "docker run -d --name postgresprisma -p 5100:5432 -e POSTGRES_DB=postgresprisma -e POSTGRES_PASSWORD=password postgres"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "sideEffects": false,
  "dependencies": {
    "@faker-js/faker": "^9.5.1",
    "@prisma/client": "6.4.1",
    "@prisma/driver-adapter-utils": "^6.4.1",
    "@types/pg": "^8.11.11",
    "@vitest/ui": "^3.0.7",
    "postgres-array": "3.0.2",
    "vitest": "^3.0.7"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@prisma/adapter-pg": "^6.4.1",
    "@prisma/pg-worker": "^6.4.1",
    "@swc/core": "1.10.11",
    "@swc/jest": "0.2.37",
    "@types/jest": "29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "pg": "^8.13.3",
    "postgres": "^3.4.3",
    "prettier": "^3.2.5",
    "prisma": "6.4.1",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "postgres": "^3.0.0"
  }
}
